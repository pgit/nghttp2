{
    "cmake.installPrefix": "${workspaceFolder}/install",
    "cmake.configureOnOpen": false,
    "cmake.configureArgs": [
        "-DENABLE_ASIO_LIB=On",
        "-DENABLE_DEBUG=On",
        "-DCMAKE_CXX_FLAGS=-stdlib=libc++"
    ],
    "files.exclude": {
        "build": true,
        "build/.cache/**": true,
        "install": true
    },
    "C_Cpp.intelliSenseEngine": "Disabled",
    "clangd.arguments": [
        "--clang-tidy",
        "--pch-storage=disk",
        "--background-index",
        "--compile-commands-dir=build"
    ]
}